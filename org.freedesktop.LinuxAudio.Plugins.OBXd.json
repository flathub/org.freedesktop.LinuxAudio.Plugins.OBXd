{
    "id": "org.freedesktop.LinuxAudio.Plugins.OBXd",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "sdk": "org.freedesktop.Sdk//22.08",
    "runtime-version": "stable",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "22.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/OBXd"
    },
    "modules": [
        {
            "name": "obxd",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "AR": "/usr/bin/gcc-ar",
                    "NM": "/usr/bin/gcc-nm",
                    "RANLIB": "/usr/bin/gcc-ranlib"
                }
            },
            "build-commands": [
                "make -C JUCE/extras/Projucer/Builds/LinuxMakefile -j $FLATPAK_BUILDER_N_JOBS",
                "JUCE/extras/Projucer/Builds/LinuxMakefile/build/Projucer --resave OB-Xd\\\ Linux.jucer",
                "(cd Builds/LinuxMakefile && make -j $FLATPAK_BUILDER_N_JOBS CONFIG=Release64 VST3 LV2)"
            ],
            "post-install": [
                "install -d ${FLATPAK_DEST}/vst3",
                "cp -r Builds/LinuxMakefile/build/OB-Xd.vst3 ${FLATPAK_DEST}/vst3",
                "strip ${FLATPAK_DEST}/vst3/OB-Xd.vst3/Contents/*/OB-Xd.so",
                "install -d ${FLATPAK_DEST}/lv2",
                "cp -r Builds/LinuxMakefile/build/OB-Xd.lv2 ${FLATPAK_DEST}/lv2",
                "strip ${FLATPAK_DEST}/lv2/OB-Xd.lv2/*.so",
                "install -d ${FLATPAK_DEST}/share",
                "# cp -r Documents/discoDSP/OB-Xd ${FLATPAK_DEST}/share/",
                "install -Dm644 org.freedesktop.LinuxAudio.Plugins.OBXd.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose --basename=${FLATPAK_ID} --prefix=${FLATPAK_DEST} --origin=flatpak ${FLATPAK_ID}",
                "install -Dm644 LICENSE -t ${FLATPAK_DEST}/share/licenses/obxd"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/reales/OB-Xd.git",
                    "//": "upstream reset the repository and removed the tags.",
                    "commit": "f1fcdd51eabcb7855cdd90818611cd7e357c359c"
                },
                {
                    "type": "git",
                    "url": "https://github.com/juce-framework/JUCE.git",
                    "tag": "7.0.3",
                    "dest": "JUCE"
                },
                {
                    "type": "git",
                    "url": "https://github.com/steinbergmedia/vst3sdk.git",
                    "tag": "v3.7.0_build_116",
                    "dest": "vst3sdk"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/obxd-projucer.patch",
                        "patches/obxd.patch"
                    ]
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.OBXd.metainfo.xml"
                }
            ]
        }
    ]
}
